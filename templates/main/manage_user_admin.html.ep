<div class="card">
    <div class="card-body">
        <i ng-show="!user" class="fas fa-sync-alt fa-spin"></i>
        <form ng-show="user">
            <input type="checkbox" name="is_admin"
                ng-click="change_user({ 'is_admin': !user.is_admin})"
                ng-model="user.is_admin"
            />
            <label for="is_admin"><%=l 'is admin' %></label><br/>
        </form>
    </div>
</div>
