<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-6">
        <button ng-click="update_settings()"
            ng-disabled="!formSettings.$valid || formSettings.$pristine">
            <%=l 'Save' %>
        </button>
        <button ng-click="load_settings()"
            ng-disabled="formSettings.$pristine">
        <%=l 'Cancel' %>
                </button>
    </div>
</div>
