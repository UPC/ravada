<div ng-show="new_hardware=='display'" class="form-group">
    <h2><%=l 'Add new Display' %></h2>
    <div class="row">
        <div class="col-lg-2">
            <label for="type"><%=l 'type' %></label>
        </div>
        <div class="col-lg-2">
            <select name="type" ng-model="item.driver"
            ng-options="driver for driver in showmachine.drivers['display']">
            </select>
        </div>
    </div>
</div>
